@model IEnumerable<KieTec.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<div class="d-flex justify-content-between align-items-end mt-5">
    <h1 class="mb-0">Fornecedores</h1>
    <a role="button" class="btn btn-primary" asp-action="Create">+ Novo Fornecedor</a>
</div>

<table class="table mt-4 mb-3">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><img width="30px" src="~/assets/pencil.png" /></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><img width="30px" src="~/assets/delete.png" /></a>
            </td>
        </tr>
}
    </tbody>
</table>

<a role="button" class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar</a>