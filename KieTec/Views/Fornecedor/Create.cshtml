@model KieTec.Models.Fornecedor

@{
    ViewData["Title"] = "Fornecedor";
}

<h1 class="mt-5">Cadastrar fornecedor</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome:</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Telefone" class="control-label">Telefone:</label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group d-flex flex-column flex-sm-row gap-2 mt-3">
                <a role="button" class="btn btn-primary w-100" asp-action="Read">Voltar</a>
                <input type="submit" value="Criar" class="btn btn-primary w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
