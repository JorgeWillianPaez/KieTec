@model KieTec.Models.Fornecedor

@{
    ViewData["Title"] = "Fornecedor";
}

<h3 class="mt-5">Você tem certeza que deseja excluir esse fornecedor?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefone)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="d-flex flex-column flex-sm-row gap-2 mt-3">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a role="button" class="btn btn-primary" asp-action="Read">Voltar</a>
    </form>
</div>
